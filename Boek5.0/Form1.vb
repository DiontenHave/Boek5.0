                                        Case 1 : icon1 = 21
                                        Case 2 : icon1 = 21
                                        Case 3 : icon1 = 21
                                        Case 4 : icon1 = 21
                                        Case 5 : icon1 = 23
                                        Case 6 : icon1 = 11
                                    End Select
                                    kar_Node.ImageIndex = icon1
                                    kar_Node.SelectedImageIndex = icon1
                                    koper_node.Nodes.Add(kar_Node)
