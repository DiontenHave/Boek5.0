    Private Function CVal(value As Object) As Integer
        Dim returnval As Integer = 0
        Try
            If IsNothing(value) Then
                returnval = 0
            Else
                returnval = CInt(Val(value))
            End If
        Catch ex As Exception
            returnval = 0
        End Try

        Return returnval
    End Function
