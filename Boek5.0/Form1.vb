                                    koper_node.SelectedImageIndex = icon_index
                                    koper_node.Tag = id_tag
                                    TreeView1.Nodes(i).Nodes.Add(koper_node)
                                    aanvulling_found = True
                                    Exit For
                                End If
                            End If
                        Next i
